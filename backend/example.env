# Backend environment example
PORT=5000
MONGODB_URI=mongodb://localhost:27017/ai-syllabus-analyzer

# Auth
JWT_SECRET=change_me_strong_password
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-key
LLM_MODEL=gpt-5-nano

# Frontend origin for CORS and email links
FRONTEND_URL=http://localhost:3000

# Email (prefer Gmail App Password)
GMAIL_USER=your@gmail.com
GMAIL_PASS=your_app_password

# Or generic SMTP config
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=KSE AI Analyzer <no-reply@example.com>

# Rate limiting & timeouts
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX=120
REQUEST_TIMEOUT_MS=20000
KEEP_ALIVE_TIMEOUT_MS=65000
TRUST_PROXY=1

# Admin bootstrap
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# Uploads
MAX_FILE_SIZE=10485760

# Puppeteer (used for generating edited/diff PDFs)
# On many VPS hosts, Chromium download can fail (403). In that case:
# - install Chromium/Chrome system-wide
# - set PUPPETEER_SKIP_DOWNLOAD=1 before `npm install`
# - set PUPPETEER_EXECUTABLE_PATH to the installed binary
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

